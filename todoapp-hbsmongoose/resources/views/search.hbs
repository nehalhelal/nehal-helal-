{{>header}}
{{>nav}}
<section class="container my-5">
    <h1>search on todolist</h1>
    <form class="d-flex mb-2" role="search" method="get" action="/search">
        <input
          class="form-control me-3"
          type="search"
          id="search"
          placeholder="search"
          aria-label="Search"
          name="search"
        />
        <button class="btn btn-dark" type="submit">search</button>
      </form>
</section>
<section class="container my-5"> 
    <h3>ToDo result</h3>
    <table class="table table-bordered">
       <thead>
            <tr>
            <th>id</th>
            <th>title</th>
            <th>content</th>
            <th>Status</th>
            <th>Date</th>
            <th>Actions</th>
            
            </tr>
        </thead>
        <tbody>
            {{#if hasData}}
            {{#each results}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{status}}</td>
                <td>{{date}}</td>
                
                <td>
                    <a href="/single/{{id}}" class="btn btn-primary mx-3">Show</a>
                    <a href="/edit/{{id}}" class="btn btn-warning mx-3">Edit</a>
                    <a href="/del/{{id}}" class="btn btn-danger mx-3">Delete</a>
                    <a href="/status/{{id}}" class="btn btn-danger mx-3">active status</a>
                    
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr >
                <td colspan="5" >no  data is found</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>

{{>footer}}